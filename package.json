{
  "name": "@w33ble/eslint-config-stencil",
  "version": "1.0.0",
  "description": "eslint config for stencil component projects",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .eslintrc.js index.js rules --ignore-pattern '!.eslintrc.js'",
    "test": "npm run lint",
    "version": "npm-auto-version",
    "start": "node ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/w33ble/eslint-config-stencil.git"
  },
  "keywords": [],
  "files": [
    "rules/",
    "index.js",
    "CHANGELOG.md",
    "AUTHORS.md"
  ],
  "author": "Joe Fleming (https://github.com/w33ble)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/w33ble/eslint-config-stencil/issues"
  },
  "homepage": "https://github.com/w33ble/eslint-config-stencil",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "ignore": [
      "package.json"
    ],
    "linters": {
      "*.{js,mjs}": [
        "eslint --fix",
        "git add"
      ],
      "*.{js,mjs,json,css}": [
        "prettier --write"
      ]
    }
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-idiomatic-jsx": "^1.1.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.14.2"
  },
  "devDependencies": {
    "@w33ble/npm-auto-tools": "*",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.4",
    "prettier": "^1.18.2",
    "typescript": "^3.5.2"
  },
  "peerDependencies": {
    "@stencil/core": "^1.1.0",
    "eslint": "^5.16.0",
    "typescript": "^3.5.2"
  }
}
